@using PhotographiApp.Web.ViewModels.Administration.Licenses;
@model EditLicenseViewModel

@{
    this.ViewData["Title"] = "Edit license";
}

<form method="post" class="col-md-6 offset-md-3 mt-3">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-dark" title="Update" value="Update" />
</form>
