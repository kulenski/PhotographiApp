@using PhotographiApp.Web.ViewModels.Albums
@model AlbumViewModel

@{ 
    ViewData["Title"] = $"Album - {Model.Name}";
}

@if (Model.IsOwnerByCurrentUser)
{
    <div class="row ml-0 mr-0 action-bar-row">
        <ul class="nav action-bar">
            <li class="nav-item">
                <a asp-controller="Album" asp-action="Edit" asp-route-id="@Model.Id" class="nav-link active"><i class="far fa-edit"></i> Edit</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Album" asp-action="Delete" asp-route-id="@Model.Id" class="nav-link active"><i class="fas fa-trash"></i> Delete</a>
            </li>
        </ul>
    </div>
}

<div class="row mt-3">
    <div class="col-12">
        <h2>@Model.Name</h2>
        <small>@Model.Description</small>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @foreach (var photo in Model.Photos)
        {
            <partial name="_PhotoAlbumThumbnail" model="photo"/>
        }
    </div>
</div>
