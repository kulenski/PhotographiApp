@using PhotographiApp.Web.ViewModels.Comments;
@model IEnumerable<CommentViewModel>
<div class="m-2">
    @if (@Model.Count() == 0)
    {
        <span>There are no comments!</span>
    }
    else
    {
        foreach (var comment in Model)
        {
            <p>(@comment.UserUserName / @comment.CreatedOn.ToString("ddd MMM yyyy, hh:mm") @comment.Value</p>
            <hr />
        }
    }
</div>

