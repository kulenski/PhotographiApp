@using PhotographiApp.Web.ViewModels.Profile
@model UserProfileViewModel
@{ 
    ViewData["Title"] = $"Profile - {Model.UserName}";
}

<div class="row mt-3">
    <div class="col-12">
        <h4>@Model.UserName <small>'s profile</small></h4>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-9">
        <h4>Photos</h4>
        <hr />
        @foreach (var photo in Model.Photos)
        {
            <partial name="_PhotoThumbnail" model="photo"/>
        }
    </div>
    <div class="col-3">
        <div>
            <h4>Albums</h4>
            <hr />
            <ul class="list-group list-group-flush">
                @foreach (var album in Model.Albums)
                {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a asp-controller="Album" asp-action="Show" asp-route-id="@album.Id">@album.Name</a>
                    <span class="badge badge-dark badge-pill"><i class="far fa-images"></i> @album.Photos.Count</span>
                </li>
                }
            </ul>
        </div>
        
        <div class="mt-3">
            <h4>Topics</h4>
            <hr />
            <ul class="list-group list-group-flush">
                @foreach (var topic in Model.Topics)
                {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a asp-controller="Topic" asp-action="Show" asp-route-id="@topic.Id">@topic.Title</a>
                    <span class="badge badge-dark badge-pill"><i class="far fa-comments"></i> @topic.Replies.Count</span>
                </li>
                }
            </ul>
        </div>
        
    </div>
    <div class="col-9">
        <h4>Favorites</h4>
        <hr />
        @foreach (var photo in Model.FavoritePhotos)
        {
            <partial name="_PhotoThumbnail" model="photo" />
        }
    </div>
</div>
